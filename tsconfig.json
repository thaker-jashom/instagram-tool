{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": [
        "src/api/**/*",
        "src/app.ts",
        "src/server.ts",
        "src/config/**/*",
        "src/services/**/*",
        "src/utils/**/*",
        "src/adapters/**/*",
        "src/models/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/scripts",
        "src/test",
        "src/queues"
    ]
}